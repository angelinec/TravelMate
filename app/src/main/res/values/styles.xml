<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/MyToolBar</item>
        <item name="android:buttonStyle">@style/ButtonStyle </item>

    </style>

    <!-- Customize your theme here. -->

    <style name="MyToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#7CB342</item>
    </style>

    <style name="MyToolBarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ListView" parent="Widget.AppCompat.ListView">
        <item name="android:background">#FFFFFF</item>
        <item name="android:divider">#0097A7</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="DrawerList" parent="ListView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TripListView" parent="ListView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>

    </style>

    <style name="ItineraryList" parent="TripListView">
    </style>

    <style name="FullItineraryList" parent="ListView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="JournalList" parent="ListView">
    </style>

    <style name="FullJournalList" parent="ListView">
    </style>

    <style name="LabelText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInput" parent="Widget.AppCompat.EditText">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:ems">7</item>
    </style>

    <style name="TextOutput">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ItemText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChecklistText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NormalText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <!--<item name="android:background">#B2EBF2</item>-->
        <item name="android:background">#C5E1A5</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="NormalBtn" parent="ButtonStyle">
        <item name="android:height">36dp</item>
        <item name="android:minWidth">88dp</item>
    </style>

    <style name="FooterBtn" parent="ButtonStyle">
        <item name="android:height">48dp</item>
        <item name="android:minWidth">88dp</item>
    </style>



</resources>




